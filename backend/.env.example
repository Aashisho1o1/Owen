# DOG Writer Enhanced AI Configuration
# Copy this file to .env and configure your API keys

# ============================================================================
# ENHANCED AI PROVIDERS - Multi-Provider Setup for Cost Optimization
# ============================================================================

# HuggingFace API (For model downloads and access)
# Get your free API key at: https://huggingface.co/settings/tokens
# Used for downloading OpenAI gpt-oss models locally (free inference after download)
HUGGINGFACE_API_KEY=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

# Google Gemini API (High-quality cloud fallback)
# Get your API key at: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=

# OpenAI API (Premium cloud option)  
# Get your API key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# ============================================================================
# LOCAL AI CONFIGURATION (Zero Cost Inference)
# ============================================================================

# Ollama configuration (automatically detected if running)
# Default: http://localhost:11434
OLLAMA_BASE_URL=http://localhost:11434

# Ollama timeout settings
OLLAMA_TIMEOUT_SECONDS=120

# ============================================================================
# COST OPTIMIZATION SETTINGS
# ============================================================================

# Daily cost limits (safety feature)
DAILY_COST_LIMIT_USD=10.00

# Provider priority (comma-separated, in order of preference)
# Options: local, huggingface, gemini, openai
PROVIDER_PRIORITY=local,huggingface,gemini,openai

# Model routing preferences
# fast: Prefer speed over quality
# balanced: Balance speed and quality  
# quality: Prefer quality over speed
ROUTING_STRATEGY=balanced

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================

# Database
DATABASE_URL=

# Authentication
JWT_SECRET=
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Security
SECRET_KEY=

# Redis (for rate limiting)
REDIS_URL=

# ============================================================================
# DEPLOYMENT CONFIGURATION
# ============================================================================

# Environment
ENVIRONMENT=development

# Logging level
LOG_LEVEL=INFO

# CORS settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# ============================================================================
# COST TRACKING & ANALYTICS
# ============================================================================

# Enable detailed cost tracking
ENABLE_COST_TRACKING=true

# Cost reporting email (optional)
COST_REPORT_EMAIL=

# Usage analytics
ENABLE_USAGE_ANALYTICS=true

# ============================================================================
# PERFORMANCE OPTIMIZATION
# ============================================================================

# Request timeout (seconds)
REQUEST_TIMEOUT=120

# Max concurrent requests
MAX_CONCURRENT_REQUESTS=10

# Enable response caching
ENABLE_RESPONSE_CACHE=true

# Cache TTL (seconds)
CACHE_TTL_SECONDS=3600